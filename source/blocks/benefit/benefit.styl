.benefit
    background light-blue
    max-height 900px
    &__wrap
        max-width 1190px
        margin  auto
        display flex
        align-items center
        position relative
        z-index 0
        height 900px
    &__content
        margin-left auto
        position relative
        z-index 2
        background-color white
        border-radius 2px
        width 385px
        height auto
        max-height 720px
        display flex
        flex-direction column
        justify-content space-between
    &__main
        padding 40px
        padding-bottom 0
        display flex
        flex-direction column
    &__btn
        width 100%
        height 60px       

.item-row
    display flex
    margin-bottom 35px
    &:last-child
        margin-bottom 45px
    &__body
        max-width 225px
        margin-left 20px
    &__title
        font-size 18px
        font-weight 500
        margin-bottom 15px
        max-width 170px
    &__img
        margin-top 15px
        width 60px
        height auto

.slider
    height 100%
    display flex
    align-items center
    top 0
    position absolute
    left 0
    z-index 1
    &__btn-prev
        position absolute
        img
            height 100%
            width 100%