.header
    position absolute
    top 0
    left 0
    overflow-x hidden

    width 100%
    
    padding-bottom 50px
    &__wrap
        display flex
        justify-content space-between
    &__left
        display flex
        align-items center
        height 100px
        z-index 2
        position relative
    &__logo-text
        font 14px/16px 'Museo Sans Light', sans-serif
        color white
        max-width 190px
        margin-left 45px
        position relative
        &::before
            content ''
            height 36px
            width 1px
            position absolute
            top 10px
            left -24px
            background-color mid-blue
    &__contacts
        color white
        padding-top 10px
        position relative
        display flex
        align-items flex-end
        flex-direction column
        @media (max-width 768px)
            display none
        &::before
            content url(../../assets/images/phone-bg.png)
            position absolute
            top 0
            left -70%
            height 100%
            width 100%
            z-index 1
.phone
    display flex
    align-items center
    z-index 2
    position relative
    &__num
        font 21px/28px 'Neumann', sans-serif
        color white
    &__btn
        border 1px solid mid-blue
        transition all 0.3s ease-in-out
        width 36px
        height 36px
        border-radius 18px
        display flex
        align-items center
        justify-content center
        margin-right 18px
        cursor pointer
        &:hover
            background-color mid-blue
    &__icon
        width 13px
        height 14px

.office-hours
    display flex
    align-items center
    justify-content flex-end
    z-index 2
    position relative
    &__elems
        list-style none
        margin 10px 0
    &__hours
        font 14px/20px 'Museo Sans Light', sans-serif
        color white
    &__icon
        width 16px
        height 24px
        margin-right 10px
    