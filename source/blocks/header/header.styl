.header
    position absolute
    top 0
    left 0
    width 100%
    &__wrap
        display flex
        justify-content space-between
        align-items center
        height 140px
    &__logo
        margin-right 20px
        height 32px
        width auto
        img
            height: 100%
            width: auto

    &__menu 
        list-style: none
        display: flex
    &__main
        display flex
        align-items center

    &__elem
        margin-right 30px

    &__link
        text-decoration none
        color light-black
        opacity .5
        font-size 14px
        font-weight 400
        text-transform uppercase
        transition all 0.2s
        &:last-child 
            margin-right 0
        &:hover, &:active
            opacity 1
    &__burger 
        display flex
        flex-direction column
        justify-content space-between
        cursor pointer
        span
            width 20px
            height 2px
            background black
            margin-bottom 3px
            transition all 0.2s
        &:hover, &:active
            opacity .5
    &__button
        margin-right 30px
