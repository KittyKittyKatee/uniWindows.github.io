.variant
    background-color smoke-white
    position relative
    z-index 5
    padding 50px 0
    &__bg-wrap
        overflow hidden
        position relative
    &__bg
        position absolute
        left auto
        top auto
        @media (max-width 1800px)
            left 50%
            top 50%
        img 
            position absolute
            left 0
            @media (max-width 1800px)
                left -900px
            &:last-child
                right 0
                left auto
                @media (max-width 1800px)
                    right 900px
    &__wrap
        position relative
        // &::before
        //     position absolute
        //     left -470px
        //     bottom -100px
        //     content url(../../assets/images/choice-float-1.png)
        //     z-index 10
        // &::after
        //     position absolute
        //     right -470px
        //     bottom -100px
        //     content url(../../assets/images/choice-float-2.png)
        //     z-index 10
    &__title
        margin 0
        margin-bottom 90px
    &__body
        display flex
        @media (max-width 1170px)
            flex-direction column
            align-items center
    &__elem
        display flex
        flex-direction column
        align-items center
        &:first-child
            margin-right 70px
            @media (max-width 1170px)
                margin-bottom 70px
                margin-right 0
    &__transition-img
        position absolute
        bottom -190px
        width 100vw
        overflow hidden
    &__img
        position relative
        @media (max-width 600px)
            width 90vw
            img 
                width 100%
    &__subtitle
        margin-bottom 19px
    &__text
        margin 10px 0 30px
        color black

.price-item
    position absolute
    top 50px
    right -30px
    background url(../../assets/images/cost-bg.png) no-repeat
    height 210px
    width 210px
    display flex
    align-items center
    justify-content center
    flex-direction column
    font 12px/1 'Museo Sans Medium', sans-serif
    color black
    padding-bottom 20px
    box-sizing border-box
    &__price
        font 18px/1 'Neumann', sans-serif
        color black
        margin-top 10px