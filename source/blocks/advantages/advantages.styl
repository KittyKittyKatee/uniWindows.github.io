.advantages
    &__wrap
        padding 0 0 120px 0
    &__content
        display grid
        grid-template-columns repeat( auto-fit, minmax(250px, 1fr) );
    &__item
        max-width 240px
        display flex
        flex-direction column
        align-items center
        justify-content flex-start
        h3, p {
            text-align center
        }
    &__img 
        height 45px
        width auto
        &--big
            height 53px
            width auto
        img
            height 100%
            width auto
            &--big
                height px
    &__title
        margin-bottom 20px
    &__text
        margin-bottom 20px
    &__btn
        font-size 12px
        font-weight 600
        text-transform uppercase