.reviews
    width 100vw
    margin 0 auto
    overflow hidden
    &__wrap
        padding 0 0 120px 0
        display flex
        justify-content center
        width 100%
    &__content
        box-sizing border-box
        padding 45px 65px 0 65px
        background-color white
        height 390px
        border-radius 2px
        display flex
        flex-direction column
        align-items center
        justify-content center
        margin-right 24px
        flex 0 0 796px
        position relative
        z-index 2
        &::before
            content url(../../assets/images/citate.png)
            width 23px
            height auto
            position absolute
            top 40px
            left 35px
            z-index 10
        &::after
            content url(../../assets/images/citate.png)
            width 23px
            height auto
            position absolute
            bottom 40px
            right 35px
            transform rotate(180deg)
    &__text
        font-size 42px
        line-height 1.2
        color dark-gray
        font-weight 200
        text-align center
    &__autor
        font-size 12px
        color black
        text-transform uppercase
        line-height 1.2
        margin-top 25px
        font-weight 500
        text-align center