.pricing
    &__wrap
        padding 0 0 120px 0
    &__title
        text-align center
    &__prices
        display flex
        justify-content space-between
        list-style none
    &__content
        padding: 80px 0
    &__top
        background: white
        height 320px
        width 100vw
        display flex
        justify-content center
        align-items center
.price
    max-width 304px
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    padding 30px 35px 45px
    transition all 0.2s
    border-radius 2px
    min-height 430px
    box-sizing border-box
    &__main
        display flex
        flex-direction column
        align-items center
    &__title
        font-size 12px
        font-weight 600
        text-transform uppercase
        color black
        transition all 0.3s
    &__num
        font-size 50px
        font-weight 800
        text-transform uppercase
        color black
        margin-top 30px
        transition all 0.3s
    &__text
        font-size 14px
        line-height 1.57 
        font-weight 300
        color black
        margin-top 40px
        opacity .5
        text-align center
        transition all 0.3s
    &__btn
        background-color transparent !important
    &:hover &__btn
        background-color light-blue !important
    &:hover
        background-color black
    &:hover &__title,&:hover &__text,&:hover &__num
        color white


.btn-blue
    font-size 12px
    font-weight 600
    text-transform uppercase
    color black
    background-color light-blue
    text-align center
    border-radius 100px
    padding 0 45px
    height 50px
    border none
    box-shadow none
    transition all 0.3s
    cursor pointer