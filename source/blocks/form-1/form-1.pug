                .timer__counter-wrap
                    .timer__elem
                        span.timer__count 01
                        span Дней
                    .timer__colon :
                    .timer__elem
                        span.timer__count 01
                        span Часа
                    .timer__colon :
                    .timer__elem
                        span.timer__count 01
                        span Минут
                    .timer__colon :
                    .timer__elem
                        span.timer__count 01
                        span Секунды
