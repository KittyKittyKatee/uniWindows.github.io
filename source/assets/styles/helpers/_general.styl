.container 
    min-max(320px, 100%, 0)


.wrap 
    min-max(320px, 1160px, 20px)


li 
    margin 0


ul 
    padding 0

    
body
    font-family 'Museo Sans Regular', Helvetica, sans-serif
    font-size 14px
    line-height 22px
    background-color bg
    overflow-wrap break-word
    word-wrap break-word
    max-width 1920px
    margin 0 auto
    color black
    @media (max-width 650px)
        min-width 650px

h1, h2, h3, p
    margin 0

.active-link
    opacity 
    
.button
    button(white)

.title-small
    font-size 14px
    font-weight 600 
    line-height 22px
    letter-spacing 0.03em
    color light-black

.text
    font-size 14px
    font-weight 400 
    line-height 22px
    color light-black
    opacity .5

.title-1
    font 84px/1 'Neumann', sans-serif

.title-2
    font 60px/72px 'Neumann', sans-serif
    text-align center
    @media (max-width 768px)
        font-size 45px
        line-height 60px
    @media (max-width 500px)
        font-size 36px
        line-height 46px
        text-align center

.title-3
    font 400 30px/1 'Neumann', sans-serif
    text-align center

.subtitle
    font 16px/22px 'Museo Sans Light', sans-serif
    color #9b9892
    text-align center

.btn-main
    button(280px)
    position relative
    z-index 10

.btn-link
    text-transform uppercase
    color mid-blue
    border-bottom 1px dashed mid-blue
    letter-spacing 1px
    font 11px/1 'Museo Sans Black', sans-serif
    padding-bottom 2px
    cursor pointer
    transition all 0.2s ease-in-out
    z-index 2
    position relative
    &:hover
        color lighten(mid-blue, 10)

.input
    height 80px
    padding 0px 42px
    box-sizing border-box
    width 100%
    background-color smoke-white
    font 16px/1 'Museo Sans Regular', sans-serif
    color black
    border-radius 40px
    box-shadow none
    appearance none
    border none
    outline none
    transition all 0.2s
    &:hover
        background-color darken(smoke-white, 1)
    &::placeholder
        font 16px/1 'Museo Sans Regular', sans-serif
        color gray
    &.error
        border 1px solid red
        animation shake 0.8s ease-in-out
        &::placeholder
            color red

.textarea
    padding 0px 42px
    box-sizing border-box
    width 100%
    background-color smoke-white
    font 16px/1 'Museo Sans Regular', sans-serif
    color black
    border-radius 40px
    box-shadow none
    appearance none
    border none
    outline none
    transition all 0.2s
    &:hover
        background-color darken(smoke-white, 1)
    &::placeholder
        font 16px/1 'Museo Sans Regular', sans-serif
        color gray

@keyframes shake {
  0% {
    transform: translateX(-12px);
  }
  10% {
    transform: translateX(9px);
  }
  20% {
    transform: translateX(-11px);
  }
  30% {
    transform: translateX(11px);
  }
  40% {
    transform: translateX(9px);
  }
  50% {
    transform: translateX(-8px);
  }
  60% {
     transform: translateX(9px);
  }
  70% {
    transform: translateX(-6px);
  }
  80% {
     transform: translateX(8px);
  }
  90% {
    transform: translateX(-5px);
  }
  100% {
    transform: translateX(3px);
  }
}