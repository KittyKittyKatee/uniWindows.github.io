.container 
    min-max(320px, 100%, 0)


.wrap 
    min-max(320px, 1140px, 10px)


li 
    margin 0


ul 
    padding 0

    
body
    font-family 'Museo Sans Regular', Helvetica, sans-serif
    font-size 14px
    line-height 22px
    background-color bg
    overflow-wrap break-word
    word-wrap break-word
    max-width 1920px
    margin 0 auto
    color black

h1, h2, h3, p
    margin 0

.active-link
    opacity 
    
.button
    button(white)

.title-small
    font-size 14px
    font-weight 600 
    line-height 22px
    letter-spacing 0.03em
    color light-black

.text
    font-size 14px
    font-weight 400 
    line-height 22px
    color light-black
    opacity .5

.title-1
    font 84px/1 'Neumann', sans-serif

.title-2
    font 60px/72px 'Neumann', sans-serif
    text-align center

.title-3
    font 400 30px/1 'Neumann', sans-serif
    text-align center

.subtitle
    font 16px/22px 'Museo Sans Light', sans-serif
    color #9b9892
    text-align center

.btn-main
    button(280px)
    position relative
    z-index 10

.btn-link
    text-transform uppercase
    color mid-blue
    border-bottom 1px dashed mid-blue
    letter-spacing 1px
    font 11px/1 'Museo Sans Black', sans-serif
    padding-bottom 2px
    cursor pointer
    transition all 0.2s ease-in-out
    z-index 2
    position relative
    &:hover
        color lighten(mid-blue, 10)

.input
    height 80px
    padding 0px 42px
    box-sizing border-box
    width 100%
    background-color smoke-white
    font 16px/1 'Museo Sans Regular', sans-serif
    color black
    border-radius 40px
    box-shadow none
    appearance none
    border none
    outline none
    transition all 0.2s
    &:hover
        background-color darken(smoke-white, 1)
    &::placeholder
        font 16px/1 'Museo Sans Regular', sans-serif
        color gray