  margin: 0 auto


title-1(color)
  font-family: "Raleway", Helvetica, sans-serif
  font-weight: 400
  line-height: 42px
  font-size: 36px
  text-transform: uppercase
  color: color

title-2(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 800
  font-size: 20px
  color: color

text(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 400
