min-max(min-width, max-width, padding) 
  min-width: min-width
  max-width: max-width
  padding: 0 padding
  box-sizing: border-box
  margin: 0 auto


title-1(color)
  font-family: "Raleway", Helvetica, sans-serif
  font-weight: 400
  line-height: 42px
  font-size: 36px
  text-transform: uppercase
  color: color

title-2(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 800
  font-size: 20px
  color: color

text(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 400
  font-size: 14px
  color: color

button(width)
  font 12px/1 'Museo Sans Black', sans-serif
  font-weight: normal;
  min-width 280px
  width width
  text-transform uppercase
  color black
  height 80px
  border-radius 40px
  padding 0 18px 1px 18px
  background-color mid-blue
  cursor pointer
  text-align center
  display block
  box-shadow none
  appearance none
  outline none
  border none
  transition all 0.4s
  &:hover
    color white
    background-color dark-blue

