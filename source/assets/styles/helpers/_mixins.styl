  color: color

button(color)
  font-family "Montserrat", Helvetica, sans-serif
  font-weight 400
  font-size 12px
  letter-spacing 0.03em
  text-transform uppercase
  color color
  height 43px
  border-radius 2px
  padding 0 18px 1px 18px
  background-color black
  cursor pointer
  text-align center
  display block
  box-shadow none
  appearance none
  border none
  transition all 0.2s
  &:hover
    color: darken(color, 20%)

